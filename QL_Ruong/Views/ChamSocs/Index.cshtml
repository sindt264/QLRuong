@model IEnumerable<QL_Ruong.Models.ChamSoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    QL_Ruong.Controllers.ChamSocsController chamSocs = new QL_Ruong.Controllers.ChamSocsController();
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ruong.Ruong_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CS_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CS_MoTa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CS_Mua)
        </th>
        <th>Chi phí</th>
        <th>Thao tác</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ruong.Ruong_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CS_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CS_MoTa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CS_Mua)
            </td>
            <td>
                @chamSocs.tinhtongtien(item.CS_ID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CS_ID }) |
                <a href="/ChamsocChiTiets/Index/@item.CS_ID">Thêm CS</a> |
                @Html.ActionLink("Delete", "Delete", new { id = item.CS_ID })
            </td>
        </tr>
    }

</table>
