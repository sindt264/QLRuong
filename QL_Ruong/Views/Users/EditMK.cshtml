@model QL_Ruong.Models.User

@{
    ViewBag.Title = "EditMK";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditMK</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>User</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.User_ID)
    @Html.HiddenFor(model => model.CTUSER_ID)
    @Html.HiddenFor(model => model.User_Name)
    @Html.HiddenFor(model => model.User_Detail)
    @Html.HiddenFor(model => model.User_TK)

    <div class="form-group">
        <label class="control-label col-md-2" for="User_MK">Mật khẩu</label>
        <div class="col-md-10">
            <input class="form-control text-box single-line" data-val="true" data-val-length="The field User_MK must be a string with a maximum length of 500." data-val-length-max="500" id="User_MK" name="User_MK" type="text" value="" />
            <span class="field-validation-valid text-danger" data-valmsg-for="User_MK" data-valmsg-replace="true"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="User_MK1">Xác nhận lại</label>
        <div class="col-md-10">
            <input class="form-control text-box single-line" data-val="true" data-val-length="The field User_MK must be a string with a maximum length of 500." data-val-length-max="500" id="User_MK1" name="User_MK1" type="text" value="" />
            <span class="field-validation-valid text-danger" data-valmsg-for="User_MK1" data-valmsg-replace="true"></span>
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
